# History control
shopt -s histappend
HISTCONTROL=ignoreboth
HISTSIZE=32768
HISTFILESIZE="${HISTSIZE}"

# Autocompletion
source /usr/share/bash-completion/bash_completion

# Set complete path
mkdir -p $HOME/.local/bin
export PATH="./bin:$HOME/.local/bin:$HOME/.cargo/bin:$HOME/.local/share/omakase-blue/bin:$PATH"
set +h

export OMAKASEBLUE_PATH="/home/$USER/.local/share/omakase-blue"
